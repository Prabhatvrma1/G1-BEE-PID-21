<%- include('../partials/header') %>
<div class="row g-4">
  <div class="col-lg-8">
    <h3 class="mb-3">Upcoming & Recent Companies</h3>
    <% if (!companies || companies.length === 0) { %>
      <div class="alert alert-info">No companies added yet. Check back later.</div>
    <% } else { %>
      <div class="list-group">
        <% companies.forEach(function(c) { %>
          <div class="list-group-item list-group-item-action mb-2">
            <div class="d-flex justify-content-between align-items-start">
              <div>
                <h5 class="mb-1"><i class="fas fa-building me-2"></i><%= c.name %></h5>
                <p class="mb-1"><strong>Role:</strong> <%= c.role %></p>
                <% if (c.location) { %>
                  <p class="mb-1"><strong>Location:</strong> <%= c.location %></p>
                <% } %>
                <% if (c.ctc) { %>
                  <p class="mb-1"><strong>CTC:</strong> <%= c.ctc %></p>
                <% } %>
                <% if (c.eligibilityCriteria) { %>
                  <p class="mb-1"><strong>Eligibility:</strong> <%= c.eligibilityCriteria %></p>
                <% } %>
                <% if (eligibilityByCompanyId && eligibilityByCompanyId[c._id.toString()]) { %>
                  <% const status = eligibilityByCompanyId[c._id.toString()]; %>
                  <p class="mb-1">
                    <strong>Your status:</strong>
                    <% if (status === 'eligible') { %>
                      <span class="badge bg-success ms-1">Likely eligible</span>
                    <% } else if (status === 'not-eligible') { %>
                      <span class="badge bg-danger ms-1">May not meet CGPA criteria</span>
                    <% } %>
                  </p>
                <% } %>
              </div>
              <div class="text-end">
                <% if (c.visitDate) { %>
                  <span class="badge bg-primary mb-2">
                    Visit: <%= new Date(c.visitDate).toLocaleDateString() %>
                  </span>
                <% } %>
                <div>
                  <small class="text-muted d-block">Added: <%= new Date(c.createdAt).toLocaleDateString() %></small>
                  <% if (appliedCompanyIds && appliedCompanyIds.has(c._id.toString())) { %>
                    <button type="button" class="btn btn-sm btn-outline-secondary mt-2" disabled>
                      Applied
                    </button>
                  <% } else { %>
                    <form method="post" action="/student/companies/<%= c._id %>/apply" class="mt-2">
                      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                      <button type="submit" class="btn btn-sm btn-primary">Apply</button>
                    </form>
                  <% } %>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>

  <div class="col-lg-4">
    <h4 class="mb-3">Notifications</h4>
    <% if (!notifications || notifications.length === 0) { %>
      <div class="alert alert-info">No notifications yet.</div>
    <% } else { %>
      <div class="list-group">
        <% notifications.forEach(function(n) { %>
          <div class="list-group-item mb-2">
            <h6 class="mb-1"><%= n.title %></h6>
            <p class="mb-1 text-muted"><%= n.message %></p>
            <div class="d-flex justify-content-between align-items-center">
              <small class="text-muted"><%= new Date(n.createdAt).toLocaleString() %></small>
              <div class="d-flex flex-column text-end">
                <% if (n.company) { %>
                  <span class="badge bg-secondary mb-1"><i class="fas fa-building me-1"></i><%= n.company.name %></span>
                <% } %>
                <% if (n.audience === 'student' && n.recipient) { %>
                  <span class="badge bg-info text-dark"><i class="fas fa-user-check me-1"></i>Application update</span>
                <% } %>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>
</div>
<%- include('../partials/footer') %>
