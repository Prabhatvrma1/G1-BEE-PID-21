<%- include('../partials/header') %>
<div class="row g-4">
  <div class="col-lg-5">
    <h3 class="mb-3">Add Company / Drive</h3>
    <form method="post" action="/admin/companies">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      <div class="mb-3">
        <label class="form-label">Company Name</label>
        <input class="form-control" name="name" required>
      </div>
      <div class="mb-3">
        <label class="form-label">Role / Position</label>
        <input class="form-control" name="role" placeholder="Software Engineer" required>
      </div>
      <div class="mb-3">
        <label class="form-label">Location</label>
        <input class="form-control" name="location" placeholder="Bangalore, India">
      </div>
      <div class="mb-3">
        <label class="form-label">Visit Date</label>
        <input type="date" class="form-control" name="visitDate">
      </div>
      <div class="mb-3">
        <label class="form-label">CTC / Package</label>
        <input class="form-control" name="ctc" placeholder="e.g. 10 LPA">
      </div>
      <div class="mb-3">
        <label class="form-label">Eligibility Criteria</label>
        <textarea class="form-control" name="eligibilityCriteria" rows="2" placeholder="Branches allowed, CGPA cutoff, etc."></textarea>
      </div>
      <div class="mb-3">
        <label class="form-label">Short Description</label>
        <textarea class="form-control" name="description" rows="3" placeholder="About the role, tech stack, rounds..."></textarea>
      </div>
      <button class="btn btn-primary">Save Company & Notify Students</button>
    </form>
  </div>

  <div class="col-lg-7">
    <h3 class="mb-3">All Companies / Drives</h3>
    <% if (!companies || companies.length === 0) { %>
      <div class="alert alert-info">No companies added yet.</div>
    <% } else { %>
      <table class="table table-striped align-middle">
        <thead>
          <tr>
            <th>Name</th>
            <th>Role</th>
            <th>Visit Date</th>
            <th>CTC</th>
            <th>Added</th>
            <th>Applicants</th>
          </tr>
        </thead>
        <tbody>
          <% companies.forEach(function(c) { %>
            <tr>
              <td><%= c.name %></td>
              <td><%= c.role %></td>
              <td><%= c.visitDate ? new Date(c.visitDate).toLocaleDateString() : '-' %></td>
              <td><%= c.ctc || '-' %></td>
              <td><%= new Date(c.createdAt).toLocaleDateString() %></td>
              <td>
                <a href="/admin/companies/<%= c._id %>/applicants" class="btn btn-sm btn-outline-primary">View Applicants</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } %>
  </div>
</div>
<%- include('../partials/footer') %>
