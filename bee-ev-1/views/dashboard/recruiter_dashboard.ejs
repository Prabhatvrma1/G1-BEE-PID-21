<%- include('../partials/header') %>
<h4 class="mb-3">All Talents</h4>
<div class="row g-3">
	<% if (talents.length === 0) { %>
		<div class="alert alert-info">No talents yet.</div>
	<% } %>
	<% talents.forEach(t => { %>
		<div class="col-md-6">
			<div class="card h-100">
				<div class="card-body">
					<h5 class="card-title"><%= t.title %></h5>
					<p class="mb-1"><strong>Owner:</strong> <%= t.owner.fullName %> (<%= t.owner.email %>)</p>
					<p class="mb-1"><strong>Location:</strong> <%= t.location %></p>
					<p class="mb-1"><strong>Skills:</strong> <%= t.skills.join(', ') %></p>
					<p class="mb-0"><%= t.bio %></p>
				</div>
			</div>
		</div>
	<% }) %>
</div>
<%- include('../partials/footer') %>


