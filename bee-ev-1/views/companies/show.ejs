<%- include('../partials/header') %>

<div class="row g-4">
  <div class="col-lg-8">
    <div class="card mb-3">
      <div class="card-body">
        <h3 class="card-title mb-2"><i class="fas fa-building me-2"></i><%= company.name %></h3>
        <p class="mb-1"><strong>Role:</strong> <%= company.role %></p>

        <% if (company.location) { %>
          <p class="mb-1"><strong>Location:</strong> <%= company.location %></p>
        <% } %>

        <% if (company.visitDate) { %>
          <p class="mb-1"><strong>Visit Date:</strong> <%= new Date(company.visitDate).toLocaleDateString() %></p>
        <% } %>

        <% if (company.ctc) { %>
          <p class="mb-1"><strong>CTC / Package:</strong> <%= company.ctc %></p>
        <% } %>

        <% if (company.eligibilityCriteria) { %>
          <p class="mb-1"><strong>Eligibility Criteria:</strong> <%= company.eligibilityCriteria %></p>
        <% } %>

        <% if (eligibleStatus) { %>
          <p class="mt-2">
            <strong>Your eligibility:</strong>
            <% if (eligibleStatus === 'eligible') { %>
              <span class="badge bg-success ms-1">Based on your CGPA, you are likely eligible</span>
            <% } else if (eligibleStatus === 'not-eligible') { %>
              <span class="badge bg-danger ms-1">Your current CGPA may not meet the criteria</span>
            <% } %>
          </p>
        <% } %>

        <% if (company.description) { %>
          <hr>
          <h5 class="mb-2">About this opportunity</h5>
          <p class="mb-0"><%= company.description %></p>
        <% } %>
      </div>
    </div>

    <a href="/" class="btn btn-outline-secondary btn-sm me-2"><i class="fas fa-home me-1"></i>Back to Home</a>
    <a href="/student/home" class="btn btn-outline-primary btn-sm"><i class="fas fa-arrow-left me-1"></i>Back to Student Home</a>
  </div>

  <div class="col-lg-4">
    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title mb-2">How to apply</h5>
        <p class="mb-2 text-muted">Go to the Student Home page and use the Apply button next to this company.</p>
        <ul class="mb-0 small text-muted">
          <li>Make sure your profile and resume are updated.</li>
          <li>Check eligibility criteria carefully.</li>
          <li>You can apply only once per company.</li>
        </ul>
      </div>
    </div>

    <div class="card">
      <div class="card-body">
        <h6 class="card-subtitle mb-2 text-muted">Quick Links</h6>
        <a href="/student/resume" class="btn btn-outline-primary btn-sm me-2 mb-2">My Resume & ATS</a>
        <a href="/student/applications" class="btn btn-outline-primary btn-sm mb-2">My Applications</a>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
