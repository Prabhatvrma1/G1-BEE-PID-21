<%- include('partials/header') %>
<div class="row justify-content-center">
	<div class="col-md-8">
		<div class="card border-danger">
			<div class="card-body text-center py-5">
				<div class="mb-4">
					<i class="fas fa-ban text-danger" style="font-size: 4rem;"></i>
				</div>
				<h2 class="text-danger mb-3">Access Denied</h2>
				<p class="lead text-muted mb-4">
					You don't have permission to access this page.
				</p>
				
				<div class="alert alert-warning mb-4">
					<strong>Your Role:</strong> 
					<span class="badge bg-info text-dark ms-2">
						<% if (userRole === 'candidate') { %>
							Candidate
						<% } else if (userRole === 'recruiter') { %>
							Recruiter
						<% } else { %>
							<%= userRole %>
						<% } %>
					</span>
					<br>
					<strong>Required Role:</strong> 
					<span class="badge bg-primary ms-2">
						<% if (requiredRole === 'candidate') { %>
							Candidate
						<% } else if (requiredRole === 'recruiter') { %>
							Recruiter
						<% } else { %>
							<%= requiredRole %>
						<% } %>
					</span>
				</div>
				
				<div class="d-flex gap-3 justify-content-center">
					<% if (userRole === 'candidate') { %>
						<a href="/dashboard/candidate" class="btn btn-primary">
							<i class="fas fa-user me-2"></i>Go to My Dashboard
						</a>
					<% } else if (userRole === 'recruiter') { %>
						<a href="/dashboard/recruiter" class="btn btn-primary">
							<i class="fas fa-users me-2"></i>Go to Recruiter Dashboard
						</a>
					<% } %>
					<a href="/" class="btn btn-outline-secondary">
						<i class="fas fa-home me-2"></i>Back to Home
					</a>
				</div>
				
				<div class="mt-4">
					<small class="text-muted">
						Need a different role? 
						<a href="/auth/logout" class="text-decoration-none">
							Logout and create a new account
						</a>
					</small>
				</div>
			</div>
		</div>
	</div>
</div>

<style>
	.card {
		box-shadow: 0 4px 20px rgba(220, 53, 69, 0.1);
		border-radius: 15px;
	}
	
	.badge {
		font-size: 0.9rem;
		padding: 0.5rem 0.8rem;
		border-radius: 20px;
	}
	
	.btn {
		border-radius: 25px;
		padding: 0.75rem 1.5rem;
		font-weight: 600;
		transition: all 0.3s ease;
	}
	
	.btn:hover {
		transform: translateY(-2px);
		box-shadow: 0 4px 15px rgba(0,0,0,0.2);
	}
	
	.alert {
		border-radius: 10px;
		border: none;
	}
	
	.text-danger {
		color: #dc2626 !important;
	}
	
	.fas.fa-ban {
		animation: shake 0.5s ease-in-out;
	}
	
	@keyframes shake {
		0%, 100% { transform: translateX(0); }
		25% { transform: translateX(-5px); }
		75% { transform: translateX(5px); }
	}
</style>

<%- include('partials/footer') %>
