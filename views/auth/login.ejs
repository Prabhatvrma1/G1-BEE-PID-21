<%- include('../partials/header') %>
<div class="row justify-content-center fade-in-up">
	<div class="col-md-6 col-lg-4">
		<div class="glass-card p-4 hover-lift">
			<div class="d-flex justify-content-between align-items-center mb-3">
				<h3 class="mb-0">Login</h3>
				<span class="badge-soft small">Welcome back</span>
			</div>
			<p class="text-muted mb-3" style="font-size: 0.9rem;">
				Sign in to continue to your student or recruiter dashboard.
			</p>
			<% if (typeof error !== 'undefined') { %>
				<div class="alert alert-danger mb-3"><%= error %></div>
			<% } %>
			<form method="post" action="/auth/login">
				<input type="hidden" name="_csrf" value="<%= csrfToken %>">
				<div class="mb-3">
					<label class="form-label">Email</label>
					<input type="email" name="email" class="form-control" required>
				</div>
				<div class="mb-3">
					<label class="form-label">Password</label>
					<input type="password" name="password" class="form-control" required>
				</div>
				<button class="btn btn-primary w-100 mb-2">Login</button>
				<div class="d-flex justify-content-between align-items-center mt-2" style="font-size: 0.85rem;">
					<span class="text-muted">New here?</span>
					<a href="/signup" class="text-decoration-none">Create an account</a>
				</div>
			</form>
		</div>
	</div>
</div>
<%- include('../partials/footer') %>


